.m_item
  background #fff
  border 1px solid $border
  &:hover
    .title
      &:after
        transform translateY(0%)
        opacity 1
      a
        color #fff
  .image
    text-align center
    border-bottom 1px solid $border
    @media XS
      height 170px
      line-height 170px
    a
      display block
      padding 10px
      @media XS
        padding 0
    img
      display inline-block
      vertical-align middle
      max-width 100%
      max-height 100%
  .title
    anim()
    position relative
    border-top 1px solid $border
    padding 15px
    overflow hidden
    &:after
      anim()
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background $red
      transform translateY(100%)
      opacity 0
    a
      anim()
      display block
      color $blue
      font-size 14px
      line-height 1.5
      font-weight bold
      height 63px
      overflow hidden
      position relative
      z-index 1
  &.top-attached
    position relative
    .image
      border-bottom none
      box-shadow inset 0 0 200px 40px #2b84d7
      @media XS
        height 266px
      a
        padding-top 80px
        padding-bottom 80px
        @media XS
          padding-top 0
          padding-bottom 0
          height 100%
          line-height 266px
        img
          max-height 50%
    .action
      position absolute
      left 0
      bottom 10px
      width 100%
      text-align center
      z-index 1
      a
        anim()
        display inline-block
        vertical-align middle
        border 1px solid #fff
        color #fff
        border-radius $radius
        padding 10px 40px
        font-size 15px
        &:hover
          background #fff
          color $blue
    .label
      position absolute
      left 0
      top 10px
      background $red
      z-index 1
      color #fff
      font-size 14px
      font-weight bold
      text-transform uppercase
      padding 0 15px
      line-height 55px
      cursor default
      &:after
        content ''
        position absolute
        right -35px
        top 0
        width: 0;
        height: 0;
        border-left: 35px solid transparent;
        border-right: 35px solid transparent;
        border-top: 55px solid $red;
      span
        position relative
        z-index 1
