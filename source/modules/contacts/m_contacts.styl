.m_contacts
  position relative
  padding 30px 0
  .info
    clearfix()
  .contact-form
    @media SM
      float left
      width 55%
      .m_form
        margin-top 10px
  .contact-map
    height 200px
    margin-top 30px
    @media SM
      height 400px
      float left
      width 100%
    #map
      height 100%
  .contact-info
    @media SM
      float left
      width 45%
    h3
      font-size 18px
      @media MD
        font-size 30px
        font-weight normal
    .row
      margin-top 15px
      @media SM
        margin-top 30px
    .label
      font-size 16px
      color #999999
      margin-bottom 5px
      @media SM
        margin-bottom 10px
    .value
      color #333333
      font-size 14px
      & + .value
        margin-top 5px
        @media SM
          margin-top 10px
      a
        color $blue
        &:hover
          color #000
          text-decoration underline