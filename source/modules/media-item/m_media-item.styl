.m_media-item
  @media screen and (min-width: 568px)
    height 200px
  @media MD
    height 300px
  &.small
    @media XS
      height 170px
    @media screen and (min-width: 640px)
      height 200px
    @media SM
      height 170px
    @media MD
      height 180px
    a
      @media XS
        height 100%
      &:after
        display none
    .image
      cursor pointer
      @media XS
        height 100%
      img
        width 100%
        @media XS
          height 100%

  a
    position relative
    display block
    @media screen and (min-width: 568px)
      height 100%
    &:after
      anim()
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background rgba(0,0,0,.6)
    &:hover
      &:after
        background rgba(0,0,0,.7)
    .image
      @media screen and (min-width: 568px)
        height 100%
      img
        display block
        width 100%
        @media screen and (min-width: 568px)
          height 100%
    .title
      position absolute
      left 0
      bottom 0
      padding 15px
      color #fff
      font-size 14px
      line-height 1.5
      z-index 1
      @media MD
        font-size 16px
        line-height 30px
