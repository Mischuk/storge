.m_product-cart
  clearfix()
  position relative
  .gallery
    margin-bottom 30px
    @media LG
      float left
      width 43%
    .product-gallery-lead
      height 240px
      margin-bottom 10px
      @media XS
        height 460px
      .slick-list,
      .slick-track,
      .slide
        height 100%
      .slick-arrow
        position absolute
        top 50%
        width 10px
        height 16px
        margin-top -8px
        background-image url("../images/sprite.png")
        background-repeat no-repeat
        font-size 0
        background-color transparent
        border none
        z-index 1
        &.slick-disabled
          opacity .2
        &.slick-prev
          left 15px
          background-position -250px -150px
          &:hover
            background-position -250px -100px
        &.slick-next
          right 15px
          background-position -200px -150px
          &:hover
            background-position -200px -100px
      .image
        height 100%
        border 1px solid $border
        width 100%
        line-height 240px
        padding-left 15px
        padding-right 15px
        text-align center
        @media XS
          line-height 460px
        img
          display inline-block
          vertical-align middle
          max-width 100%
          max-height 100%
    .product-gallery-thumbs
      .slick-list
        margin 0 -5px
      .slide
        margin 0 5px
        &.slick-current
          .image
            border 1px solid $red
        .image
          anim()
          border 1px solid $border
          height 70px
          line-height 55px
          text-align center
          padding 5px
          img
            display inline-block
            vertical-align middle
            max-width 100%
            max-height 100%
  .info
    @media LG
      position relative
      padding-bottom 50px
      float right
      width 55%
    .action
      clearfix()
      @media LG
        position absolute
        left 0
        bottom 0
        width 100%
      .cost
        font-weight bold
        font-size 21px
        line-height 48px
        float left
        @media XS
          font-size 30px
      .action
        float right
        @media LG
          position static
          width auto
  .table
    margin 30px 0
    @media LG
      margin-top 0
    h3
      font-size 18px
      margin-bottom 5px
      @media LG
        margin-bottom 15px
  &.full
    .section-title h3
      margin-bottom 0 !important
    .gallery
      float none
      width 100%
    .table
      h3
        font-size 24px
        @media MD
          font-size 30px
  .description
    padding-top 30px