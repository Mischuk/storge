.m_breadcrumbs
  position relative
  display none
  margin-bottom 20px
  cursor default
  @media SM
    display block
  li
    display inline-block
    vertical-align middle
    position relative
    height 10px
    line-height 1
    & + li
      margin-left 25px
      &:after
        content ''
        width 13px
        height 7px
        background url("../images/arrow.png") no-repeat 0 0
        position absolute
        left -21px
        top 50%
        margin-top -4px
    a
      display inline-block
      vertical-align top
      font-size 10px
      line-height 1
      text-transform uppercase
      color #fff
      &:hover
        text-decoration underline