.m_paginations
  position relative
  text-align center
  margin-top 30px
  border-top 1px solid $border
  padding-top 30px
  ul
    font-size 0
  li
    display inline-block
    vertical-align middle
    width 30px
    height 30px
    a
      display block
      width 100%
      height 100%
      line-height 30px
      font-size 14px
      color $blue
      &.next,
      &.prev
        border 1px solid $border
        position relative
        &:hover
          border-color $blue
        &:after
          content ''
          width: 10px;
          height: 16px;
          position absolute
          left 50%
          top 50%
          margin-left -(@width/2)
          margin-top -(@height/2)
          opacity .5
      &.prev
        &:after
          background: url('../images/sprite.png') no-repeat -250px -150px;
      &.next
        &:after
          background: url('../images/sprite.png') no-repeat -200px -150px;
      &.prev:hover
        &:after
          opacity 1
          background: url('../images/sprite.png') no-repeat -250px -100px;
      &.next:hover
        &:after
          opacity 1
          background: url('../images/sprite.png') no-repeat -200px -100px;