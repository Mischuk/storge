.m_footer
  position absolute
  bottom 0
  left 0
  background #f7f7f7
  box-shadow inset 0 2px 0 -1px $border
  width 100%
  font-size 14px
  color #999999
  clear both
  a
    color #999999
    &:hover
      color $blue
  a[href^="mailto"]
    color $blue
    &:hover
      text-decoration underline
  p
    margin-bottom 0
    padding 5px 0
  ul
    padding 10px 5px
    @media SM
      padding 0
    li
      a
        display inline-block
        vertical-align middle
        padding 5px 0
  .column
    float left
    width 50%
    @media SM
      width 25%
    &:nth-child(2n+1)
      clear left
      @media SM
        clear none
  .top
    clearfix()
    padding 10px 0
    @media XS
      padding 30px 0
  .contacts
    padding 10px 5px
    @media SM
      padding 0
  .bottom
    clearfix()
    border-top 1px solid $border
    padding 20px 0
    text-align center
    @media XS
      padding 40px 0
    @media SM
      text-align left
    .developed
      margin-top 15px
      @media SM
        margin-top 0
        text-align right
    > div
      @media SM
        float left
        width 50%
