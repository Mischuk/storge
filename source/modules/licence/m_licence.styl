.m_licence
  position relative
  @media XS
    margin-top 30px
  .item
    display block
    .image
      border 4px solid #ebebeb
      img
        display block
        width 100%
        max-width 100%
    .title
      text-align center
      padding-top 5px
      padding-bottom 15px
      span
        color $blue
        font-size 14px

.mfp-ready
  button.mfp-arrow
    opacity 1
button.mfp-arrow
  width 40px
  height 40px
  opacity 1
  margin-top -20px
  border 1px solid #fff
  opacity 0
  &:before
    display none
  &:active
    margin-top -20px !important
  &:hover
    border-color $blue
    &.mfp-arrow-right:after
      background-position -200px -100px
    &.mfp-arrow-left:after
      background-position -250px -100px

.mfp-arrow-right
  right -50px
  &:after
    content ''
    background: url('../images/sprite.png') no-repeat -200px -50px;
    width: 10px;
    height: 16px;
    border none
    position absolute
    left 50%
    top 50%
    margin-left -(@width/2)
    margin-top -(@height/2)
    display block
.mfp-arrow-left
  left -50px
  &:after
    content ''
    background: url('../images/sprite.png') no-repeat -250px -50px;
    width: 10px;
    height: 16px;
    border none
    position absolute
    left 50%
    top 50%
    margin-left -(@width/2)
    margin-top -(@height/2)
    display block