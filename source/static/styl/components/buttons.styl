// Mobile burger button
.menu-mobile
  a
    anim()
    display block
    z-index 10
    width 100%
    height 100%
    cursor pointer
    background #fbfbfb
    border 1px solid $border
    border-radius $radius
    @media screen and (min-width: 768px)
      display none
    &:after,
    &:before,
    span
      anim()
      content ''
      position absolute
      left 50%
      width 20px
      margin-left -10px
      height 2px
      background $blue
    &:before
      top 10px
    &:after
      bottom 10px
    span
      top 50%
      margin-top -1.5px
    &.open
      background $blue
      border-color $blue
      span, &:before, &:after
        background #fff
      span
        opacity 0
        transform translateX(-5px)
      &:after
        transform rotate(135deg) translate(-6px, 6px)
      &:before
        transform rotate(-135deg) translate(-5px, -5px)


.button
  display inline-block
  vertical-align middle
  font-size 16px
  font-weight normal
  padding 15px 40px
  border-radius $radius
  border none
  box-shadow 1px 1px 2px rgba(0,0,0,.25)
  transition background-color 0.3s cubic-bezier(.33,.66,.99,1)
  background $blue
  color #fff
  &:hover
    background $red
  &:active
    box-shadow 0px 1px 1px rgba(0,0,0,.4), inset 1px 1px 2px rgba(0,0,0,.24)
    transform translateY(1px)
  &.red
    background $red
    &:hover
      background $blue

.details-button
  margin-top 30px
  &.center
    text-align center
  &.small
    a
      padding 15px 25px 15px 45px
      &:after
        left 20px
  a
    position relative
    display inline-block
    vertical-align middle
    font-size 14px
    font-weight normal
    padding 15px 50px 15px 70px
    border-radius $radius
    box-shadow 1px 1px 2px rgba(0,0,0,.25)
    transition background-color 0.3s cubic-bezier(.33,.66,.99,1)
    background $blue
    color #fff
    &:hover
      background $red
    &:active
      box-shadow 0px 1px 1px rgba(0,0,0,.4), inset 1px 1px 2px rgba(0,0,0,.24)
      transform translateY(0px)
    &.red
      background $red
      &:hover
        background $blue
    &:after
      content ''
      background: url('../images/sprite.png') no-repeat 0 -100px;
      width: 16px;
      height: 12px;
      position absolute
      left 40px
      top 50%
      margin-top -(@height/2)